---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation';
import { Hero, Services, Benefits, Testimonials, CTA, LogoMarquee, Footer } from '../../components/sections';
import TemplateShortcut from '../../components/ui/TemplateShortcut.astro';
import { getIndustryConfig } from '../../config/industries';

const industry = getIndustryConfig('insurance');
---

<BaseLayout 
  title={industry.hero.headline}
  description={industry.hero.subheadline}
  industry={industry.name}
  industryConfig={industry}
>
  <TemplateShortcut label="Browse All Templates" />

  <Navigation client:load industry={industry} />
  
  <main class="flex-1">
    <Hero 
      client:load 
      industry={industry} 
      showBadge={true}
      badgeText="50+ carriers represented"
      variant="minimal-centered"
      headlineSegments={[
        { text: 'Protect', weight: 'black' },
        { text: ' What ', weight: 'light' },
        { text: 'Matters', weight: 'black' },
        { text: ' Most', weight: 'light' },
      ]}
    />
    
    <LogoMarquee 
      client:visible 
      title="Insurance carriers we represent"
      logos={[
        { name: 'State Farm' },
        { name: 'Allstate' },
        { name: 'Progressive' },
        { name: 'Liberty Mutual' },
        { name: 'Nationwide' },
        { name: 'Travelers' },
        { name: 'Hartford' },
        { name: 'MetLife' },
      ]}
    />
    
    <Services 
      client:visible 
      industry={industry}
      variant="cards"
    />
    
    <Benefits 
      client:visible 
      industry={industry}
      variant="bento"
    />
    
    <Testimonials 
      client:visible 
      industry={industry}
      variant="quote-slider"
    />
    
    <CTA 
      client:visible 
      industry={industry}
      variant="default"
    />
  </main>
  
  <Footer client:visible industry={industry} showNewsletter={false} variant="simple-dark" />
</BaseLayout>
