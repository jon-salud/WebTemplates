---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation';
import { Hero, Services, Benefits, Testimonials, CTA, LogoMarquee, Footer } from '../../components/sections';
import TemplateShortcut from '../../components/ui/TemplateShortcut.astro';
import { getIndustryConfig } from '../../config/industries';

const industry = getIndustryConfig('consulting');
---

<BaseLayout 
  title={industry.hero.headline}
  description={industry.hero.subheadline}
  industry={industry.name}
  industryConfig={industry}
>
  <TemplateShortcut label="Browse All Templates" />

  <Navigation client:load industry={industry} />
  
  <main class="flex-1">
    <Hero 
      client:load 
      industry={industry} 
      showBadge={true}
      badgeText="200+ successful transformations"
      variant="bento"
      backgroundImage="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&q=80&w=2070"
      headlineSegments={[
        { text: 'Strategic', weight: 'light' },
        { text: ' Consulting ', weight: 'bold' },
        { text: 'Driving', weight: 'light' },
        { text: ' Growth', weight: 'extrabold' },
      ]}
    />
    
    <LogoMarquee 
      client:visible 
      title="Trusted by Fortune 500 companies"
      logos={[
        { name: 'Fortune 500' },
        { name: 'TechGiant' },
        { name: 'RetailKing' },
        { name: 'BankOne' },
        { name: 'AutoMakers' },
        { name: 'PharmaCo' },
        { name: 'EnergyPlus' },
        { name: 'TelecomX' },
      ]}
    />
    
    <Services 
      client:visible 
      industry={industry}
      variant="hover-cards"
    />
    
    <Benefits 
      client:visible 
      industry={industry}
      variant="radial"
    />
    
    <Testimonials 
      client:visible 
      industry={industry}
      variant="spotlight"
    />
    
    <CTA 
      client:visible 
      industry={industry}
      variant="floating"
    />
  </main>
  
  <Footer client:visible industry={industry} showNewsletter={false} variant="mega" />
</BaseLayout>
