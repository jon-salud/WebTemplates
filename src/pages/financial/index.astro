---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation';
import { Hero, Services, Benefits, Testimonials, CTA, LogoMarquee, Footer } from '../../components/sections';
import TemplateShortcut from '../../components/ui/TemplateShortcut.astro';
import { getIndustryConfig } from '../../config/industries';

const industry = getIndustryConfig('financial');
---

<BaseLayout 
  title={industry.hero.headline}
  description={industry.hero.subheadline}
  industry={industry.name}
  industryConfig={industry}
>
  <TemplateShortcut label="Browse All Templates" />

  <Navigation client:load industry={industry} />
  
  <main class="flex-1">
    <Hero 
      client:load 
      industry={industry} 
      showBadge={true}
      badgeText="$2.5B+ assets under management"
      variant="centered-cards"
      headlineSegments={[
        { text: 'Secure Your', weight: 'light' },
        { text: ' Financial ', weight: 'bold' },
        { text: 'Future', weight: 'black' },
      ]}
    />
    
    <LogoMarquee 
      client:visible 
      title="Industry partnerships & certifications"
      logos={[
        { name: 'CFP Board' },
        { name: 'CFA Institute' },
        { name: 'FINRA' },
        { name: 'SEC' },
        { name: 'Schwab' },
        { name: 'Fidelity' },
        { name: 'Vanguard' },
        { name: 'Morningstar' },
      ]}
    />
    
    <Services 
      client:visible 
      industry={industry}
      variant="tabs"
    />
    
    <Benefits 
      client:visible 
      industry={industry}
      variant="comparison"
    />
    
    <Testimonials 
      client:visible 
      industry={industry}
      variant="masonry"
    />
    
    <CTA 
      client:visible 
      industry={industry}
      variant="stats-cta"
    />
  </main>
  
  <Footer client:visible industry={industry} showNewsletter={true} variant="dark-gradient" />
</BaseLayout>
