---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation';
import { Hero, Services, Benefits, Testimonials, CTA, LogoMarquee, Footer } from '../../components/sections';
import TemplateShortcut from '../../components/ui/TemplateShortcut.astro';
import { getIndustryConfig } from '../../config/industries';

const industry = getIndustryConfig('realestate');
---

<BaseLayout 
  title={industry.hero.headline}
  description={industry.hero.subheadline}
  industry={industry.name}
  industryConfig={industry}
>
  <TemplateShortcut label="Browse All Templates" />

  <Navigation client:load industry={industry} />
  
  <main class="flex-1">
    <Hero 
      client:load 
      industry={industry} 
      showBadge={true}
      badgeText="#1 Agency in the Region"
      variant="video-bg"
      videoUrl="https://assets.mixkit.co/videos/1171/1171-720.mp4"
      headlineSegments={[
        { text: 'Find Your', weight: 'light' },
        { text: ' Dream ', weight: 'bold' },
        { text: 'Property', weight: 'extrabold' },
      ]}
    />
    
    <LogoMarquee 
      client:visible 
      title="Featured in"
      logos={[
        { name: 'Zillow' },
        { name: 'Realtor.com' },
        { name: 'Redfin' },
        { name: 'Trulia' },
        { name: 'RE/MAX' },
        { name: 'Century 21' },
        { name: 'Coldwell' },
        { name: 'Keller Williams' },
      ]}
    />
    
    <Services 
      client:visible 
      industry={industry}
      variant="image-cards"
    />
    
    <Benefits 
      client:visible 
      industry={industry}
      variant="animated-counter"
    />
    
    <Testimonials 
      client:visible 
      industry={industry}
      variant="floating-cards"
    />
    
    <CTA 
      client:visible 
      industry={industry}
      variant="dual-action"
    />
  </main>
  
  <Footer client:visible industry={industry} showNewsletter={true} variant="split-brand" />
</BaseLayout>
