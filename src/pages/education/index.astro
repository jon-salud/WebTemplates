---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation';
import { Hero, Services, Benefits, Testimonials, CTA, LogoMarquee, Footer } from '../../components/sections';
import TemplateShortcut from '../../components/ui/TemplateShortcut.astro';
import { getIndustryConfig } from '../../config/industries';

const industry = getIndustryConfig('education');
---

<BaseLayout 
  title={industry.hero.headline}
  description={industry.hero.subheadline}
  industry={industry.name}
  industryConfig={industry}
>
  <TemplateShortcut label="Browse All Templates" />

  <Navigation client:load industry={industry} />
  
  <main class="flex-1">
    <Hero 
      client:load 
      industry={industry} 
      showBadge={true}
      badgeText="94% college acceptance rate"
      variant="diagonal-split"
      backgroundImage="https://images.unsplash.com/photo-1523240795612-9a054b0db644?auto=format&fit=crop&q=80&w=2070"
      headlineSegments={[
        { text: 'Unlock', weight: 'light' },
        { text: ' Your Child\'s ', weight: 'bold' },
        { text: 'Full', weight: 'light' },
        { text: ' Potential', weight: 'extrabold' },
      ]}
    />
    
    <LogoMarquee 
      client:visible 
      title="Our students have been accepted to"
      logos={[
        { name: 'Harvard' },
        { name: 'MIT' },
        { name: 'Stanford' },
        { name: 'Yale' },
        { name: 'Princeton' },
        { name: 'Columbia' },
        { name: 'Berkeley' },
        { name: 'UCLA' },
      ]}
    />
    
    <Services 
      client:visible 
      industry={industry}
      variant="masonry"
    />
    
    <Benefits 
      client:visible 
      industry={industry}
      variant="stats"
    />
    
    <Testimonials 
      client:visible 
      industry={industry}
      variant="centered-quote"
    />
    
    <CTA 
      client:visible 
      industry={industry}
      variant="split"
    />
  </main>
  
  <Footer client:visible industry={industry} showNewsletter={true} variant="stacked" />
</BaseLayout>
