---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/layout/Navigation';
import { Hero, Services, Benefits, Testimonials, CTA, LogoMarquee, Footer } from '../../components/sections';
import TemplateShortcut from '../../components/ui/TemplateShortcut.astro';
import { getIndustryConfig } from '../../config/industries';

const industry = getIndustryConfig('healthcare');
---

<BaseLayout 
  title={industry.hero.headline}
  description={industry.hero.subheadline}
  industry={industry.name}
  industryConfig={industry}
>
  <TemplateShortcut label="Browse All Templates" />

  <Navigation client:load industry={industry} />
  
  <main class="flex-1">
    <Hero 
      client:load 
      industry={industry} 
      showBadge={true}
      badgeText="50+ board-certified specialists"
      variant="asymmetric"
      backgroundImage="https://images.unsplash.com/photo-1576091160550-2173dba999ef?auto=format&fit=crop&q=80&w=2070"
      headlineSegments={[
        { text: 'Compassionate', weight: 'light' },
        { text: ' Healthcare ', weight: 'bold' },
        { text: 'That Puts', weight: 'light' },
        { text: ' You First', weight: 'extrabold' },
      ]}
    />
    
    <LogoMarquee 
      client:visible 
      title="Accepted insurance providers"
      logos={[
        { name: 'BlueCross' },
        { name: 'Aetna' },
        { name: 'UnitedHealth' },
        { name: 'Cigna' },
        { name: 'Humana' },
        { name: 'Kaiser' },
        { name: 'Medicare' },
        { name: 'Medicaid' },
      ]}
    />
    
    <Services 
      client:visible 
      industry={industry}
      variant="icon-grid"
    />
    
    <Benefits 
      client:visible 
      industry={industry}
      variant="timeline"
    />
    
    <Testimonials 
      client:visible 
      industry={industry}
      variant="carousel"
    />
    
    <CTA 
      client:visible 
      industry={industry}
      variant="with-form"
    />
  </main>
  
  <Footer client:visible industry={industry} showNewsletter={true} variant="centered" />
</BaseLayout>
