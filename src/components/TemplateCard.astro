---
import resolveServiceIcon from '../utils/serviceIcon';

interface Props {
  industry: {
    id: string;
    name: string;
    tagline: string;
    colors: {
      primary: string;
      primaryLight: string;
    };
    services: {
      items: Array<{ icon?: string }>;
    };
  };
}

const { industry } = Astro.props;
const icon = resolveServiceIcon(industry.services.items[0]?.icon);
---

<a href={`/${industry.id}/`} class="group relative overflow-hidden rounded-xl border border-neutral-200 bg-white p-6 shadow-sm transition-all hover:-translate-y-1 hover:shadow-lg">
  <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg" style={`background-color: ${industry.colors.primaryLight}`}>
    <span class="text-2xl" style={`color: ${industry.colors.primary}`}>
      {icon}
    </span>
  </div>
  <h3 class="mb-2 text-xl font-semibold text-neutral-900 group-hover:text-brand-primary transition-colors">
    {industry.name}
  </h3>
  <p class="mb-4 text-sm text-neutral-600 line-clamp-2">
    {industry.tagline}
  </p>
  <div class="flex items-center gap-2 text-sm font-medium" style={`color: ${industry.colors.primary}`}>
    <span>View Template</span>
    <span class="transition-transform group-hover:translate-x-1">â†’</span>
  </div>
</a>
