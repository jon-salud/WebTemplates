---

<section class="py-20 bg-gradient-to-b from-neutral-900 to-neutral-950" aria-label="Product Showcase">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <p class="text-xs uppercase tracking-[0.3em] text-neutral-500 mb-3">See It In Action</p>
      <h2 class="text-3xl md:text-4xl font-semibold text-white mb-4">
        Powerful, Yet Intuitive
      </h2>
      <p class="text-neutral-400 max-w-2xl mx-auto">
        A clean interface that gets out of your way. Everything you need, nothing you don't.
      </p>
    </div>

    <!-- Product Screenshot Mock -->
    <div class="relative max-w-5xl mx-auto">
      <!-- Browser frame -->
      <div class="bg-neutral-800 rounded-t-xl p-3 flex items-center gap-2">
        <div class="flex gap-1.5">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <div class="flex-1 mx-4">
          <div class="bg-neutral-700 rounded-md px-4 py-1.5 text-xs text-neutral-400 text-center">
            app.{industry.name.toLowerCase().replace(/\s+/g, '')}.com
          </div>
        </div>
      </div>
      
      <!-- App content mock -->
      <div class="bg-neutral-850 rounded-b-xl overflow-hidden aspect-video bg-gradient-to-br from-neutral-800 to-neutral-900">
        <div class="h-full flex">
          <!-- Sidebar mock -->
          <div class="w-16 md:w-48 bg-neutral-800/50 p-4 hidden sm:block">
            <div class="space-y-3">
              <div class="h-8 bg-neutral-700/50 rounded-lg"></div>
              <div class="h-6 bg-neutral-700/30 rounded w-3/4"></div>
              <div class="h-6 bg-neutral-700/30 rounded w-1/2"></div>
              <div class="h-6 bg-neutral-700/30 rounded w-2/3"></div>
            </div>
          </div>
          
          <!-- Main content mock -->
          <div class="flex-1 p-4 md:p-8">
            <div class="h-8 bg-neutral-700/50 rounded-lg w-1/3 mb-6"></div>
            <div class="grid grid-cols-3 gap-4 mb-6">
              <div class="aspect-video bg-gradient-to-br from-indigo-500/20 to-purple-500/20 rounded-lg"></div>
              <div class="aspect-video bg-gradient-to-br from-cyan-500/20 to-blue-500/20 rounded-lg"></div>
              <div class="aspect-video bg-gradient-to-br from-emerald-500/20 to-teal-500/20 rounded-lg"></div>
            </div>
            <div class="space-y-2">
              <div class="h-4 bg-neutral-700/30 rounded w-full"></div>
              <div class="h-4 bg-neutral-700/30 rounded w-5/6"></div>
              <div class="h-4 bg-neutral-700/30 rounded w-4/6"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Floating feature badges -->
      <div class="absolute -bottom-6 left-1/2 -translate-x-1/2 flex gap-4">
        {features.map((feature) => (
          <div class="bg-white rounded-full px-4 py-2 shadow-xl flex items-center gap-2">
            <span>{feature.icon}</span>
            <span class="text-sm font-medium text-neutral-900">{feature.label}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="mt-16 text-center">
      <a href="#demo" class="inline-flex items-center gap-2 px-6 py-3 bg-white text-neutral-900 rounded-full font-medium hover:bg-neutral-100 transition-colors">
        Watch Demo
