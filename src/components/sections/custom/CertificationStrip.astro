---
import { ShieldCheck, Award, CheckCircle } from 'lucide-react';
const { industry } = Astro.props;
---
<section class="py-8 bg-white border-b border-neutral-100" aria-label="Certifications">
  <div class="container mx-auto px-6">
    <div class="flex flex-wrap items-center justify-center gap-8 md:gap-16 opacity-70 grayscale hover:grayscale-0 transition-all duration-500">
      
      <div class="flex items-center gap-3">
        <ShieldCheck className="w-8 h-8" style={{ color: industry.colors.primary }} />
        <div class="text-left">
          <p class="text-xs font-bold uppercase tracking-wider text-neutral-400">Verified</p>
          <p class="font-bold text-neutral-800">Licensed & Insured</p>
        </div>
      </div>

      <div class="w-px h-10 bg-neutral-200 hidden md:block"></div>

      <div class="flex items-center gap-3">
        <Award className="w-8 h-8" style={{ color: industry.colors.primary }} />
        <div class="text-left">
          <p class="text-xs font-bold uppercase tracking-wider text-neutral-400">Guarantee</p>
          <p class="font-bold text-neutral-800">Bonded Contractors</p>
        </div>
      </div>

      <div class="w-px h-10 bg-neutral-200 hidden md:block"></div>

      <div class="flex items-center gap-3">
        <CheckCircle className="w-8 h-8" style={{ color: industry.colors.primary }} />
        <div class="text-left">
          <p class="text-xs font-bold uppercase tracking-wider text-neutral-400">Quality</p>
          <p class="font-bold text-neutral-800">Certified Installers</p>
        </div>
      </div>

    </div>
  </div>
</section>
