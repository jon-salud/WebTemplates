---
/**
 * AmbientGallery - Hospitality & Culinary
 * Immersive sensory gallery for restaurants/hotels
 */
interface Props {
  industry: {
    name: string;
    colors: {
      primary: string;
      accent: string;
    };
  };
  images?: string[];
}

const { industry, images = [] } = Astro.props;

const defaultImages = [
  'https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?auto=format&fit=crop&w=800&q=80', // Restaurant interior
  'https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=800&q=80', // Food
  'https://images.unsplash.com/photo-1551024709-8f23befc6f87?auto=format&fit=crop&w=800&q=80', // Drink/Detail
  'https://images.unsplash.com/photo-1559339352-11d035aa65de?auto=format&fit=crop&w=800&q=80', // Atmosphere
];

const displayImages = images.length > 0 ? images : defaultImages;

const galleryItems = [
  { label: 'The Ambiance', aspect: 'aspect-[4/3]', span: 'md:col-span-2', image: displayImages[0] },
  { label: 'Culinary Art', aspect: 'aspect-square', span: '', image: displayImages[1] },
  { label: 'Intimate Details', aspect: 'aspect-square', span: '', image: displayImages[2] },
  { label: 'The Experience', aspect: 'aspect-[4/3]', span: 'md:col-span-2', image: displayImages[3] },
];
---

<section class="py-20 bg-neutral-900" aria-label="Ambient Gallery">
  <div class="container mx-auto px-6">
    <div class="flex items-end justify-between mb-12">
      <div>
        <p class="text-xs uppercase tracking-[0.3em] text-neutral-500 mb-3">Gallery</p>
        <h2 class="text-3xl md:text-4xl font-semibold text-white">
          A Feast for the Senses
        </h2>
      </div>
      <a href="#gallery" class="hidden md:inline-flex items-center gap-2 text-neutral-400 hover:text-white transition-colors">
        View Full Gallery
        <span>â†’</span>
      </a>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {galleryItems.map((item, index) => (
        <div class={`${item.span} ${item.aspect} rounded-2xl overflow-hidden relative group cursor-pointer`}>
          <img 
            src={item.image} 
            alt={item.label}
            class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 group-hover:opacity-40 transition-opacity"></div>
          
          <!-- Hover overlay -->
          <div class="absolute inset-0 bg-white/10 opacity-0 group-hover:opacity-100 transition-opacity"></div>
          
          <!-- Label -->
          <div class="absolute bottom-4 left-4 right-4">
            <p class="text-white text-sm font-medium translate-y-0 group-hover:-translate-y-1 transition-transform">{item.label}</p>
          </div>
          
          <!-- Decorative corner -->
          <div class="absolute top-4 right-4 w-8 h-8 border-t border-r border-white/30 opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
      ))}
    </div>

    <!-- Instagram CTA -->
    <div class="mt-12 text-center">
      <p class="text-neutral-500 text-sm mb-3">Follow our journey</p>
      <a href="#instagram" class="inline-flex items-center gap-2 text-white hover:text-amber-400 transition-colors">
        <span class="text-lg">ðŸ“·</span>
        @{industry.name.toLowerCase().replace(/\s+/g, '')}
      </a>
    </div>
  </div>
</section>
