---
/**
 * TeamCredentials - Professional Services
 * Shows team members with credentials/certifications to build trust
 */
interface Props {
    industry: {
        name: string;
        colors: {
            primary: string;
            accent: string;
        };
    };
}

const { industry } = Astro.props;

const theme = {
    background: "var(--theme-background, #f8fafc)",
    surface: "var(--theme-surface, #ffffff)",
    text: "var(--theme-text, #0f172a)",
};

const teamMembers = [
    {
        name: "Sarah Mitchell",
        role: "Managing Partner",
        credentials: "CPA, MBA",
        experience: "15+ years",
        image: "/images/team/placeholder-1.jpg",
    },
    {
        name: "James Chen",
        role: "Senior Associate",
        credentials: "JD, LLM",
        experience: "10+ years",
        image: "/images/team/placeholder-2.jpg",
    },
    {
        name: "Elena Rodriguez",
        role: "Director of Operations",
        credentials: "PMP, Six Sigma",
        experience: "12+ years",
        image: "/images/team/placeholder-3.jpg",
    },
];

const certifications = [
    { name: "ISO 9001 Certified", icon: "✓" },
    { name: "Licensed & Bonded", icon: "✓" },
    { name: "BBB A+ Rating", icon: "✓" },
    { name: "Industry Accredited", icon: "✓" },
];
---

<section
    class="py-20"
    style={`background:${theme.surface};color:${theme.text};`}
    aria-label="Our Team & Credentials"
>
    <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <p class="text-xs uppercase tracking-[0.3em] mb-3 opacity-70">
                Meet Your Team
            </p>
            <h2 class="text-3xl md:text-4xl font-semibold mb-4">
                Trusted Professionals at Your Service
            </h2>
            <p class="opacity-80 max-w-2xl mx-auto">
                Our team brings decades of combined experience and
                industry-recognized credentials to every engagement.
            </p>
        </div>

        <!-- Team Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            {
                teamMembers.map((member) => (
                    <div
                        class="rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow"
                        style={`background:${theme.background};`}
                    >
                        <div class="w-20 h-20 rounded-full bg-gradient-to-br from-white/10 to-black/10 mb-4 flex items-center justify-center text-2xl opacity-70">
                            {member.name.charAt(0)}
                        </div>
                        <h3 class="text-lg font-semibold">{member.name}</h3>
                        <p class="text-sm opacity-70 mb-2">{member.role}</p>
                        <div class="flex items-center gap-3 text-xs">
                            <span
                                class="px-2 py-1 rounded-full"
                                style={`background:${theme.surface};border:1px solid rgba(255,255,255,0.15);color:${theme.text};`}
                            >
                                {member.credentials}
                            </span>
                            <span class="opacity-70">{member.experience}</span>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Certifications Strip -->
        <div
            class="rounded-2xl p-8 shadow-sm"
            style={`background:${theme.background};`}
        >
            <div class="flex flex-wrap justify-center gap-8 md:gap-16">
                {
                    certifications.map((cert) => (
                        <div class="flex items-center gap-2">
                            <span
                                class="w-6 h-6 rounded-full flex items-center justify-center text-sm font-bold"
                                style={`background:${industry.colors.accent}22;color:${industry.colors.accent};`}
                            >
                                {cert.icon}
                            </span>
                            <span class="text-sm font-medium">{cert.name}</span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
