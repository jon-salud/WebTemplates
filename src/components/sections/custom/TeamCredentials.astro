---
/**
 * TeamCredentials - Professional Services
 * Shows team members with credentials/certifications to build trust
 */
interface Props {
  industry: {
    name: string;
    colors: {
      primary: string;
      accent: string;
    };
  };
}

const { industry } = Astro.props;

const teamMembers = [
  {
    name: 'Sarah Mitchell',
    role: 'Managing Partner',
    credentials: 'CPA, MBA',
    experience: '15+ years',
    image: '/images/team/placeholder-1.jpg',
  },
  {
    name: 'James Chen',
    role: 'Senior Associate',
    credentials: 'JD, LLM',
    experience: '10+ years',
    image: '/images/team/placeholder-2.jpg',
  },
  {
    name: 'Elena Rodriguez',
    role: 'Director of Operations',
    credentials: 'PMP, Six Sigma',
    experience: '12+ years',
    image: '/images/team/placeholder-3.jpg',
  },
];

const certifications = [
  { name: 'ISO 9001 Certified', icon: '✓' },
  { name: 'Licensed & Bonded', icon: '✓' },
  { name: 'BBB A+ Rating', icon: '✓' },
  { name: 'Industry Accredited', icon: '✓' },
];
---

<section class="py-20 bg-neutral-50" aria-label="Our Team & Credentials">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <p class="text-xs uppercase tracking-[0.3em] text-neutral-500 mb-3">Meet Your Team</p>
      <h2 class="text-3xl md:text-4xl font-semibold text-neutral-900 mb-4">
        Trusted Professionals at Your Service
      </h2>
      <p class="text-neutral-600 max-w-2xl mx-auto">
        Our team brings decades of combined experience and industry-recognized credentials to every engagement.
      </p>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {teamMembers.map((member) => (
        <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="w-20 h-20 rounded-full bg-gradient-to-br from-neutral-200 to-neutral-300 mb-4 flex items-center justify-center text-2xl text-neutral-500">
            {member.name.charAt(0)}
          </div>
          <h3 class="text-lg font-semibold text-neutral-900">{member.name}</h3>
          <p class="text-sm text-neutral-600 mb-2">{member.role}</p>
          <div class="flex items-center gap-3 text-xs">
            <span class="px-2 py-1 bg-neutral-100 rounded-full text-neutral-700">{member.credentials}</span>
            <span class="text-neutral-500">{member.experience}</span>
          </div>
        </div>
      ))}
    </div>

    <!-- Certifications Strip -->
    <div class="bg-white rounded-2xl p-8 shadow-sm">
      <div class="flex flex-wrap justify-center gap-8 md:gap-16">
        {certifications.map((cert) => (
          <div class="flex items-center gap-2 text-neutral-700">
            <span class="w-6 h-6 rounded-full bg-green-100 text-green-600 flex items-center justify-center text-sm font-bold">
              {cert.icon}
            </span>
            <span class="text-sm font-medium">{cert.name}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
